<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="/css/commonStyle.css" />
    <link rel="stylesheet" type="text/css" href="/css/reserveSlot.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/handlebars/dist/handlebars.min.js"
    ></script>
    <script src="/js/reserveSlot.js"></script>
    <title>Reserve Slot</title>
  </head>
  <body>
    <header>
      <h2 class="logo">Reserve Slot</h2>
      <nav class="navigation">
        <a href="/editReservation">Edit Reservation</a>
        <a href="/profile" class="icon-link">
          <i class="fas fa-user" style="font-size: 29px"></i>
        </a>
        <button class="btnLogin-popup" onclick="window.location.href='/login'">
          Logout
        </button>
      </nav>
    </header>
    <div class="calendar">
      <div class="calendar_inner">
        <div class="calendar_arrows">
          <div class="calendar_heading">
            <i class="fas fa-arrow-left" id="previous"></i>
            <h2 class="month_year">{{month_year}}</h2>
            <i class="fas fa-arrow-right" id="next"></i>
          </div>
          <div id="selectLabContainer">
            <p class="selectLab_text">Select Laboratory:</p>
            <select id="selectedLab">
              {{#each labs}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="current_datetime">
            <p class="day_text">Today</p>
            <p class="date_text">{{current_date}}</p>
          </div>
          <div class="day_date">
            <ul class="day">
              <li>Sun</li>
              <li>Mon</li>
              <li>Tue</li>
              <li>Wed</li>
              <li>Thu</li>
              <li>Fri</li>
              <li>Sat</li>
            </ul>
            <ul class="date">
              {{#each dates}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Reservation Code -->
    <div class="timeslot_container">
      <div class="timeslot_reservation">
        <div class="time_slot">
          {{#each timeslots}}
            <div>{{this}}</div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="seatnumber_container">
      <div class="seatnumber_reservation">
        <div class="seat_number">
          {{#each seatnumbers}}
            <div>{{this}}</div>
          {{/each}}
        </div>
      </div>
    </div>

    <div id="myOverlay" class="wholeOverlay">
      <div class="overlay">
        <span class="close">&times;</span>
        <h3 id="bookingDetailsTag">Booking Details</h3>
        <p id="bookingInfo">{{booking_info}}</p>
      </div>
    </div>
  </body>
</html>